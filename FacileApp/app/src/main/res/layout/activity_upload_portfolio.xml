<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.creativeminds.facileapp.UploadPortfolio">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step 1: Upload Your Portfolio"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/port_file"
        android:layout_marginRight="@dimen/_18sdp"
        android:layout_marginLeft="@dimen/_18sdp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="70dp"
        android:text="Upload Portfolio"
        android:textColor="#fff"
        android:layout_marginBottom="@dimen/_18sdp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/next_step"
        android:layout_marginRight="@dimen/_100sdp"
        android:layout_marginLeft="@dimen/_100sdp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="130dp"
        android:text="Next Step"
        android:textColor="#fff"
        android:layout_marginBottom="@dimen/_18sdp"
        />

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfView"
        android:layout_below="@+id/next_step"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
