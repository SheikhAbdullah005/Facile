<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_7sdp"
    app:cardElevation="@dimen/_7sdp"
    app:cardCornerRadius="@dimen/_7sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/service_title"
            android:text="Title"
            android:paddingTop="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimary"
            android:paddingBottom="@dimen/_10sdp"
            android:textStyle="bold"
            android:layout_below="@id/service_picture"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/service_des"
            android:text="Description"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/service_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/service_price"
            android:text="Price"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/_12sdp"
            android:layout_below="@id/service_des"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/dept"
            android:text="Departmnet"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_below="@id/service_price"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/cart"
            android:text="Click on the service to proceed further!"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/dept"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>