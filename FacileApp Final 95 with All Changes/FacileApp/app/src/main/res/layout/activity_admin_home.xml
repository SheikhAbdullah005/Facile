<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AdminActivities.AdminHomeActivity">

    <include
        android:id="@+id/top"
        layout="@layout/admintop"/>
    <LinearLayout
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <GridLayout
            android:columnOrderPreserved="false"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@+id/add_servive"
                app:cardElevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_margin="@dimen/_12sdp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/addnewicon"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Service"
                        android:gravity="center"
                        android:textColor="#009432"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_12sdp"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@+id/view_services"
                app:cardElevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_margin="@dimen/_12sdp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/servicess"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All Services"
                        android:gravity="center"
                        android:textColor="#079992"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_12sdp"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@+id/all_service_providers"
                app:cardElevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_margin="@dimen/_12sdp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/serviceicon"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service Providers"
                        android:gravity="center"
                        android:textColor="#EE5A24"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_12sdp"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_margin="@dimen/_12sdp"
                android:id="@+id/all_users"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/usersicon"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customers"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#ED4C67"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_12sdp"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@+id/all_jobs"
                app:cardElevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_margin="@dimen/_12sdp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/jobhistoryicon"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job History"
                        android:gravity="center"
                        android:textColor="#B53471"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_12sdp"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_margin="@dimen/_12sdp"
                android:id="@+id/all_complaints"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/complainicon"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Complaints"
                        android:textColor="#F79F1F"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_12sdp"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </GridLayout>
    </LinearLayout>
</RelativeLayout>